{
  "compilerOptions": {
    "outDir": "./dist/esm-raw",
    "rootDir": "./lib",
    "lib": ["dom", "esnext"],
    "target": "ES2017",
    "module": "es2020",
    "moduleResolution": "node",
    "allowJs": true,
    "declarationDir": "dist/types",
    "declaration": true,
    "strict": true,
    "importHelpers": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "noImplicitThis": false,
    "typeRoots": ["node_modules/@types"],
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": ["./lib/**/*", "types"],
  "exclude": ["./node_modules/**/*", "dist", "test"]
}
