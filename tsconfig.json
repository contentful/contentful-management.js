{
  "compilerOptions": {
    "rootDir": "./lib",
    "lib": ["dom", "esnext"],
    "target": "ES2021",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "inlineSources": true,
    "sourceMap": true,
    "noImplicitThis": false
  },
  "include": ["lib", "types"]
}
