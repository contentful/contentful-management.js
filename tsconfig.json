{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "outDir": "./dist/typings",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitThis": false,
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["lib", "global-types"]
}
