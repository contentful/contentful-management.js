{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "outDir": "./typings/generated",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitThis": false,
    "typeRoots": ["node_modules/@types", "./global-types"]
  },
  "include": ["lib", "global-types"],
  "typedocOptions": {
    "mode": "library",
    "inputFiles": ["./lib/contentful-management.ts", "./lib/types.ts"],
    "out": "./out",
    "readme": "README.md",
    "name": "contentful-management.js",
    "includeVersion": true,
    "hideGenerator": true,
    "excludePrivate": true,
    "excludeNotExported": true,
    "ignoreCompilerErrors": true,
    "categorizeByGroup": true
  }
}
